<workflow_config id="default">
  <!-- FIXME: for now we are using file specifications here and let
       Workflow read and parse the corresponding XML files itself.
       In the future the workflow configuration should be part of this
       XML structure. 
    -->
  <persisters> 
    <configfile>[% dir.sysconfdir %]/workflow_persister.xml</configfile>
  </persisters>

  <activities>
    <configfile>[% dir.sysconfdir %]/workflow_activity.xml</configfile>
  </activities>

  <workflows>
    <configfile>[% dir.sysconfdir %]/workflow_request_dataonly.xml</configfile>
  </workflows>
    
</workflow_config>
