<div class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"></a>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                {{#each this.model.navEntries as |navEntry|}}
                    {{#if navEntry.entries.length}}
                        <li class="dropdown {{if navEntry.active "active"}}">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                                {{navEntry.label}}
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                {{#each navEntry.entries as |entry|}}
                                    <li>
                                        {{#link-to "openxpki" entry.key (query-params force=navEntry.active)}}
                                            {{entry.label}}
                                        {{/link-to}}
                                    </li>
                                {{/each}}
                            </ul>
                        </li>
                    {{else}}
                        <li class="{{if navEntry.active "active"}}">
                            {{#link-to "openxpki" navEntry.key (query-params force=navEntry.active)}}
                                {{navEntry.label}}
                            {{/link-to}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>

            <ul class="nav navbar-nav navbar-right">
                {{#if this.model.user}}
                    <li>
                        {{#link-to "openxpki" "logout"}}
                            Log out
                        {{/link-to}}
                    </li>
                {{/if}}
            </ul>
        </div>
    </div>
</div>

<div class="container-fluid  {{this.model.tabs.firstObject.page.className}}">
    <div class="oxi-message">
        {{#if this.model.status.href}}
            <a href="{{this.model.status.href}}" target="_blank">
                <div class="alert {{this.statusClass}}" style="cursor:pointer;">
                    {{this.model.status.message}}
                </div>
            </a>
        {{else}}
            <div class="alert {{this.statusClass}}">
                {{this.model.status.message}}
            </div>
        {{/if}}
    </div>

    <div class="oxi-pagehead">
        {{#if this.model.tabs.firstObject.page.breadcrumb.length}}
            <ol class="breadcrumb">
                {{#each this.model.tabs.firstObject.page.breadcrumb as |entry|}}
                    {{#if entry.label}}<li class="{{entry.className}}">{{entry.label}}</li>{{/if}}
                {{/each}}
            </ol>
        {{/if}}
        <h2>{{this.model.tabs.firstObject.page.label}}</h2>
    </div>

    {{#if this.model.tabs.firstObject.page.description}}
        <div class="description">
            {{{this.model.tabs.firstObject.page.description}}}
        </div>
    {{/if}}
    {{#if this.showTabs}}
        <ul class="nav nav-tabs">
            {{#each this.model.tabs as |entry|}}
                <li class="{{if entry.active "active"}}">
                    <a {{action "activateTab" entry}}>
                        {{if entry.page.shortlabel entry.page.shortlabel entry.page.label}}
                        <span class="tab-close" {{action "closeTab" entry}}>&times;</span>
                    </a>
                </li>
            {{/each}}
        </ul>
    {{/if}}
    <div class="tab-content">
        {{#each this.model.tabs as |entry|}}
            <div class="tab-pane {{if entry.active "active"}}">
                <div class="Xcontainer sections">
                    <div class="row">
                        <div class="{{if entry.right "col-md-8" "col-md-12"}}">
                            {{#each entry.main as |mainEntry|}}
                                {{oxisection-main content=mainEntry}}
                            {{/each}}
                        </div>
                        <div class="{{if entry.right "col-md-4" "hide"}}">
                            {{#each entry.right as |rightEntry|}}
                                <div class="well">
                                    {{oxisection-main content=rightEntry}}
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<BsModal
    class="{{this.modal.page.className}}"
    @open={{this.modal}}
    @closeButton={{true}}
    @fade={{true}}
    @backdrop={{true}}
    @backdropClose={{false}}
    @onHidden={{action "clearPopupData"}}
    as |Modal|
>
    <Modal.header>
        <h4 class="modal-title">
            {{if this.modal.page.shortlabel this.modal.page.shortlabel this.modal.page.label}}
        </h4>
    </Modal.header>
    <Modal.body>
        {{#each this.modal.main as |mainEntry|}}
            <OxisectionMain @content={{mainEntry}}/>
        {{/each}}
    </Modal.body>
    <Modal.footer>
        <BsButton @onClick={{action Modal.close}}>Close</BsButton>
    </Modal.footer>
</BsModal>

<BsModal
    @open={{this.error}}
    @closeButton={{true}}
    @fade={{true}}
    @backdrop={{true}}
    @backdropClose={{false}}
    as |Modal|
>
    <Modal.header>
        <h4 class="modal-title">Application Error</h4>
    </Modal.header>
    <Modal.body>
        {{{this.error.message}}}
    </Modal.body>
    <Modal.footer>
        <BsButton @onClick={{action "reload"}} @type="primary">Reload application</BsButton>
        <BsButton @onClick={{action Modal.close}}>Close</BsButton>
    </Modal.footer>
</BsModal>

<div class="refresh">
    <div class="progress progress-striped active">
        <div class="progress-bar progress-bar-success" role="progressbar">
            <p class="text-center">Autorefresh</p>
        </div>
    </div>
</div>

<div class="loading">
    <div class="progress progress-striped active">
        <div class="progress-bar" role="progressbar">
            <p class="text-center">Loading ...</p>
        </div>
    </div>
</div>