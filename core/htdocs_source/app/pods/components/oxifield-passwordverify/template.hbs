{{#if this.isFixed}}
    {{input class="form-control in-form-group" type="text" readonly="readonly" value=this.password}}
    {{input class="form-control in-form-group" type="text" value=this.confirm placeholder=this.placeholder}}
{{else}}
    {{input class="form-control in-form-group" type="password" value=this.password focus-out="hintRetype"}}
    {{input class="form-control in-form-group" type="password" value=this.confirm focus-in="confirmFocusIn" focus-out="confirmFocusOut" placeholder=this.placeholder}}
{{/if}}
