<div class="alert {{if this.hasError "alert-danger" "hide"}}">
    {{this.errors}}
</div>

<div class="container-fluid">
    <form class="form-horizontal" role="form">
        {{#each this.visibleFields as |field|}}
            {{oxifield-main content=field addClone="addClone" delClone="delClone" valueChange="valueChange"}}
        {{/each}}
        <div class="form-group">
            <div class="col-md-offset-2 col-sm-7 oxi-form-button">
                <button class="btn btn-default {{if this.loading "btn-loading"}} submit" {{action "submit"}}>
                    {{this.submitLabel}}
                </button>
                {{#if this.content.content.reset_label}}
                    <button class="btn btn-default reset" {{action "reset"}}>
                        {{this.content.content.reset_label}}
                    </button>
                {{/if}}
                {{#each this.content.content.buttons as |btn|}}
                    {{oxi-button button=btn class="btn btn-default" onClick=(action "buttonClick")}}
                {{/each}}

            </div>
        </div>
    </form>
</div>


