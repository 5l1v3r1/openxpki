<div class="alert {{if this.hasError "alert-danger" "hide"}}">
    {{this.errors}}
</div>

<div class="container-fluid">
    <form class="form-horizontal" role="form">
        {{#each this.visibleFields as |field|}}
            {{oxifield-main content=field addClone="addClone" delClone="delClone" valueChange="valueChange"}}
        {{/each}}
        <div class="form-group">
            <div class="col-md-offset-2 col-sm-7 oxi-form-button">
                <BsButton @type="default" class="{{if this.loading "btn-loading"}} submit" @onClick={{this.submit}}>
                    {{this.submitLabel}}
                </BsButton>
                {{#if this.content.content.reset_label}}
                    <BsButton @type="default" class="reset" @onClick={{this.reset}}>
                        {{this.content.content.reset_label}}
                    </BsButton>
                {{/if}}
                {{#each this.content.content.buttons as |btn|}}
                    <OxiButton class="btn btn-default" @button={{btn}} @onClick={{this.buttonClick}}/>
                {{/each}}

            </div>
        </div>
    </form>
</div>


