{{#if this.isStatic}}
    <div class="oxi-no-input">{{@content.options.0.label}}</div>
{{else if this.content.editable}}
    <div class="input-group">
        {{#if this.customMode}}
            {{input class="form-control" placeholder=this.content.placeholder value=this.content.value}}
        {{else}}
            <OxiSelect @list={{this.options}} @selected={{this.sanitizedValue}} @onChange={{this.optionSelected}} />
        {{/if}}
        <span class="input-group-btn">
            <BsButton @type="default" class="{{if this.customMode "active"}}" @onClick={{this.toggleCustomMode}}>
                Custom
            </BsButton>
        </span>
    </div>
{{else}}
    <OxiSelect @list={{this.options}} @selected={{this.sanitizedValue}} @onChange={{this.optionSelected}} />
{{/if}}
