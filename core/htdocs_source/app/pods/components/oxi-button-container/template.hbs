{{#if @buttons}}
    <div class="oxi-button-container">
        {{#if this.hasDescription}}
            {{#each @buttons as |btn|}}
                <div class="row stacked-buttons">
                    {{#if btn.section}}
                        <div class="col-xs-12">
                            <strong>{{btn.section}}</strong>
                        </div>
                    {{else}}
                        <div class="col-xs-4">
                            <OxiButton @button={{btn}} class="btn-block" @onClick={{@buttonClick}}/>
                        </div>
                        <div class="col-xs-8 btn-bt-margin">
                            {{btn.description}}
                        </div>
                    {{/if}}
                </div>
            {{/each}}
        {{else}}
            {{#each this.buttonGroups as |btnGroup|}}
                <div class="btn-group btn-group-justified">
                    {{#each btnGroup as |btn|}}
                        {{!-- Additional wrapping needed to properly display justified buttons.
                             See https://getbootstrap.com/docs/3.3/components/#btn-groups-justified --}}
                        <div class="btn-group" role="group">
                            {{#if btn.section}}
                                <!-- Section are not supported yet -->
                            {{else}}
                                <OxiButton @button={{btn}} @onClick={{@buttonClick}}/>
                            {{/if}}
                        </div>
                    {{/each}}
                </div>
                <div class="spacer"></div>
            {{/each}}
        {{/if}}
    </div>
{{/if}}
