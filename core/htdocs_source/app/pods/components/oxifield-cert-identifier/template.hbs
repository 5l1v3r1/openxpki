<div class="drowdown">
    {{input class="form-control" value=this.search placeholder=this.content.placeholder}}
    <ul class="dropdown-menu" role="menu">
        {{#each this.searchResults as |result|}}
            <li class="{{if result.active "active"}}">
                <a {{action "selectResult" result}}>{{result.label}}</a>
            </li>
        {{else}}
            <li>
                <a>No matches found</a>
            </li>
        {{/each}}
    </ul>
</div>
