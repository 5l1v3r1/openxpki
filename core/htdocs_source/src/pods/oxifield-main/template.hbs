{{#unless isHidden}}
    <div class="form-group {{if hasError "has-error"}}">
        {{#if isCheckbox}}
            <div class="col-md-2"></div>
        {{else if isBool}}
            <div class="col-md-2"></div>
        {{else}}
            <label class="col-md-2 control-label">{{content.label}}</label>
        {{/if}}
        {{#if content.keys}}
            <div class="col-md-2">
                {{view "select" class="form-control" content=content.keys optionValuePath="content.value" optionLabelPath="content.label" value=content.name}}
            </div>
        {{/if}}
        <div class="{{sFieldSize}}" title="{{content.tooltip}}">
            {{#if isBool}}
                {{oxifield-bool content=content}}
            {{else if isCertIdentifier}}
                {{oxifield-certidentifier content=content}}
            {{else if isDate}}
                {{oxifield-date content=content}}
            {{else if isDatetime}}
                {{oxifield-datetime content=content}}
            {{else if isCheckbox}}
                {{oxifield-checkbox content=content}}
            {{else if isPassword}}
                {{oxifield-password content=content}}
            {{else if isPasswordVerify}}
                {{oxifield-passwordverify content=content}}
            {{else if isSelect}}
                {{oxifield-select content=content}}
            {{else if isText}}
                {{oxifield-text content=content}}
            {{else if isTextarea}}
                {{oxifield-textarea content=content}}
            {{else if isUploadarea}}
                {{oxifield-uploadarea content=content}}
            {{/if}}
            {{#if content.error}}
                <span class="help-block">{{content.error}}</span>
            {{/if}}
        </div>
        {{#if content.clonable}}
            <div class="col-md-1">
                {{#if content.isLast}}
                    <button class="btn btn-primary clone" type="button" {{action "addClone"}}>
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                {{else}}
                    <button class="btn btn-danger clone" type="button" {{action "delClone"}}>
                        <span class="glyphicon glyphicon-minus"></span>
                    </button>
                {{/if}}
            </div>
        {{/if}}
    </div>
{{/unless}}
