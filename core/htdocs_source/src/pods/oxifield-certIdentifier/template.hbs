<div class="drowdown">
    {{input class="form-control" value=search placeholder=content.placeholder}}
    <ul class="dropdown-menu" role="menu">
        {{#each searchResults as |result|}}
            <li>
                <a class="oxi-link-ignore" {{action "selectResult" result}}>{{result.label}}</a>
            </li>
        {{else}}
            <li>
                <a class="oxi-link-ignore" href="#">No matches found</a>
            </li>
        {{/each}}
    </ul>
</div>
